<h1>Article Detail</h1>
<div class="card mt-4">
  <h5 class="card-header"><%= @article.title %></h5>
  <div class="card-body">
    <p><%= simple_format(@article.body) %></p>
    <%= link_to "Articles", articles_path ,class: "btn btn-dark"%>
    <%= link_to "Edit", edit_article_path ,class: "btn btn-dark ml-3"%>
    <%= link_to "Delete", article_path(@article), method: :delete, data: {confirm: '削除してよろしいですか？'} ,class: "btn btn-dark ml-3"%>
  </div>
</div>
