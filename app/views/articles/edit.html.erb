<h2>Edit posts</h2>
<%= form_with model: @article, local: true do |form| %>
<div>
  <div class="form-group mt-4">
    <%= form.label "Title" %>
    <p><%= form.text_field :title, class: "form-control" %></p>
  </div>
  <div class="form-group mt-4">
    <%= form.label "Body" %>
    <p><%= form.text_area :body, rows: 8, class: "form-control" %></p>
  </div>
  <p>
    <%= form.submit 'Update', class: "btn btn-dark btn-block my-4" %>
  </p>
</div>
<% end %>